
@{
    ViewBag.Title = "ViewAllRoles";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@model IEnumerable<Blog.Models.RoleDTO>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p>
    @Html.ActionLink("Вернуться", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Добавить новую роль", "AddRole", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr><th>Role</th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @if (item.RoleName.ToLower() != "admin")
                {
                    @Html.ActionLink("Delete", "DeleteUserRole",
                   new { RoleName = item.RoleName } )
                }
            </td>
        </tr>
    }
</table>

